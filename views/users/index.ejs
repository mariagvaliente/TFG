<h1>
    <%=i18n.user.title%>
</h1>

<table>
    <% for (var i in users) { %>
        <tr>
            <td>
                <a href="/users/<%= users[i].id %>" ><%= users[i].username %></a>
                <%= users[i].isAdmin ? "(admin)" : "" %>
            </td>
            <% if (session.user) { %>
                <% if (session.user.isAdmin || session.user.id === users[i].id) { %>
                    <td>
                        <a href="/users/<%= users[i].id %>/edit"><button><%=i18n.common.edit%></button></a>
                    </td>
                <%  } %>
                <% if (session.user.isAdmin && session.user.id !== users[i].id) { %>
                    <td>
                        <a href="/users/<%= users[i].id %>?_method=DELETE"
                           onClick="return confirm('<%=i18n.common.delete%> <%=i18n.user.title%>: <%= users[i].username %>');">
                            <button><%=i18n.common.delete%></button>
                        </a>
                    </td>
                <%  } %>
            <% } %>
        </tr>
    <%  } %>
</table>
