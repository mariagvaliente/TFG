<header class="main" id="mainHeader">

    <div class="right">
        <% if (!session.user) { %>
            <a href="/">Login</a>
        <% } else { %>
            <a href="/users/<%= session.user.id %>"><%= session.user.username %></a>

        <% } %>
    </div>
    <div class="left">
        <% if (session.user) { %>
        <a href="/?_method=DELETE">Logout</a>
        <% } %>
    </div>

</header>
<h1>
    Configuración básica de la escape room:
</h1>

<br class="escapeRoomItem">

<div>
    <% var attachment = escapeRoom.attachment; %>
    <% include ../attachments/_show %>
</div>
    <div>
        <br />
        Título: <b><%= escapeRoom.title %></b>
        <br />
        Profesor/a: <b><%= escapeRoom.teacher %></b>
        <br />
        Asignatura: <b><%= escapeRoom.subject %></b>
        <br />
        Duración: <b><%= escapeRoom.duration %></b>
        <br />
        Descripción: <b><%= escapeRoom.description %></b>
        <br />
        Vídeo: <b><%= escapeRoom.video %></b>
        <br />
        Número máximo de participantes: <b><%= escapeRoom.nmax %></b>
        <br />
        Inivitación: <b><%= escapeRoom.invitation %></b>
        <br />
    </div>
    </br>
    <td>
        <a href="/escapeRooms/<%= escapeRoom.id %>/edit"><button>editar</button></a>
