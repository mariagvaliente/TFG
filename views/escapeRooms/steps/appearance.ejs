<% include ../../partials/_header.ejs %>
<div class="main step-appearance">
  <h2 >Apariencia</h2>  
  <div class="half-flex-container">
    <div class="left-half-flex">
        <img class="buttonApp <%= escapeRoom.appearance  === "litera"    ?  "selected" : "" %>" id="litera" src="/images/litera.png" autocomplete="off"/>
        <img class="buttonApp <%= escapeRoom.appearance  === "cerulean"  ?  "selected" : "" %>" id="cerulean" src="/images/cerulean.png" autocomplete="off"/>
        <img class="buttonApp <%= escapeRoom.appearance  === "journal"   ?  "selected" : "" %>" id="journal" src="/images/journal.png" autocomplete="off"/>
        <img class="buttonApp <%= escapeRoom.appearance  === "sketchy"   ?  "selected" : "" %>" id="sketchy" src="/images/sketchy.png" autocomplete="off"/>
        <img class="buttonApp <%= escapeRoom.appearance  === "darkly"    ?  "selected" : "" %>" id="darkly" src="/images/darkly.png" autocomplete="off"/>
        <img class="buttonApp <%= escapeRoom.appearance  === "cyborg"    ?  "selected" : "" %>" id="cyborg" src="/images/cyborg.png" autocomplete="off"/>

    </div>
    <div class="right-half-flex">
      <div class="preview">
        <iframe id="previewIframe" src='/escapeRooms/<%= escapeRoom.id %>/preview?appearance=<%=escapeRoom.appearance%>'></iframe>
      </div>
    </div>
  </div>
  <form method='POST' action='/escapeRooms/<%= escapeRoom.id %>/appearance'  >
    <input type="hidden" id="appearance" name="appearance" value="<%= escapeRoom.appearance  || "litera" %>" />
    <div class="align-right">
        <a href="/escapeRooms/<%= escapeRoom.id %>"><button class="progress-buttons" type="button" value="exit" id="exit" name="exit">salir</button></a>
        <button class="progress-buttons" type="submit" value="previous" id="previous" name="previous">anterior</button>
        <button class="progress-buttons" type="submit" value="next" id="next" name="next">siguiente</button>
    </div>
  </form>
  <br/><br/><br/><br/>
</div>

<% include ../../partials/__footer %>
<%- include('../../partials/__progress', {progress: 5}) %>
<script>
    var url = '/escapeRooms/<%= escapeRoom.id %>/preview?appearance=';
    $(function() {
        $('.buttonApp').on('click', function(e){
            let input = $('#appearance');
            let val = input.val();
            let oldSelected = $('#'+val);
            input.val(this.id);
            if (oldSelected) {
                oldSelected.removeClass('selected');
            }
            $('#previewIframe').attr('src', url + this.id);
            this.classList.add('selected')
        })

    })
</script>