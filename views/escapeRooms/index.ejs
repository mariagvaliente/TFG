<body class="escapeRooms">
<header class="main" id="mainHeader">

    <div class="right">
        <% if (!session.user) { %>
            <a href="/">Login</a>
        <% } else { %>
            <%= session.user.username %>

        <% } %>
    </div>
    <div class="left">
        <% if (session.user) { %>
            <a href="/?_method=DELETE">Logout</a>
        <% } %>
    </div>
</header>
<% if (escapeRooms==0) { %>
    <h1>
        No has creado ninguna escape room, gestiónalas desde aquí...
    </h1>
<% } else {  %>
    <h1>
        Gestiona las escape rooms desde aquí...
    </h1>

    <table>
        <% for (var i in escapeRooms) { %>
            <% var escapeRoom = escapeRooms[i]; %>
            <td>
                <% var attachment = escapeRoom.attachment; %>
                <form action="/escapeRooms/<%= escapeRoom.id %>">
                    <button type="submit">
                        <% include ../attachments/_show %>
                        </br>
                        <%= escapeRoom.title %>
                    </button>
                </form>

            <% } %>
            </td>
    </table>
<% } %>

</br>

<a href="/escapeRooms/new"><button class="more" type="button">+</button></a>


<footer>
    <img src="/images/logo.png" width="10%" style=" margin-top: 100px"/>
    <img src="/images/ESCUDO_UPM.png" width="5%" style=" margin-top: 100px; float: right"/>
</footer>

</body>