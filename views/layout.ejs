<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Escape room</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!-- <link rel="stylesheet" href="/resources/demos/style.css"> -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</head>
<body>
<section  id="mainSection">
    <%- body %>
    <% if (messages.success || messages.info || messages.error) { %> 
        <div id="flassmessages">
            <span class="close" id="close">&#x2716;</span>
            <% if (messages.info) { %>
                <article id='flashinfo'>
                    <h3>Information of interest:</h3>
                    <ul>
                        <% for (var i in messages.info) { %>
                            <li> <%= messages.info[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>

            <% if (messages.success) { %>
                <article id='flashsuccess'>
                    <h3>Tasks completed successfully:</h3>
                    <ul>
                        <% for (var i in messages.success) { %>
                            <li> <%= messages.success[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>

            <% if (messages.error) { %>
                <article id='flasherror'>
                    <h3>Errors:</h3>
                    <ul>
                        <% for (var i in messages.error) { %>
                            <li> <%= messages.error[i] %> </li>
                        <% } %>
                    </ul>
                </article>
            <% } %>
        </div>
        <script>
        document.getElementById('close').onclick = (e)=>{
             document.getElementById('flassmessages').style.display = 'none';
        }
        setTimeout(()=>{
            document.getElementById('flassmessages').style.display = 'none';
        }, 4000)
        </script>
    <% } %>

</section>


</body>


</html>
